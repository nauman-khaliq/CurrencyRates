<resources>

    <style name="UserNameTextStyle">
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserSecondaryTextStyle">
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ToBuyDesText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UserImage">
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PostsRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>
    <style name="ToBuyListRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="PostTitleDetailText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>





    <style name="MainLabelTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopUp_Animation">
        <item name="android:windowEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_pop_exit_anim</item>
    </style>



    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>




</resources>
